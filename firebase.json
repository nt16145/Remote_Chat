{
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "./function",
    "rewrites": [{
      "source": "**",
      "function": "app"
    }],
     "ignore": [
       "firebase.json",
       "**/.*",
       "**/node_modules/**"
     ],
    "headers": [{
      "source" : "**/*.@(js|html)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=0"
      } ]
    }]
  }
}
